<%- include('layouts/header.ejs') %>

      <br>
      <!--Begins presentation-->
      <div style="text-align: center;"> 
        <h1>Share your receta!</h1>
        <p>If you have a recipe that you want to share you are invited to do it! <br> Of course, under this rules:</p>
        <li>The recipe has to be about mexican food</li>
        <li>Do not expect to get paid for the recipe</li>
        <li>The recipe is going to be share with all the users</li>

      </div>
      <br>
      <br>

      <div class="container">
        <div class="row ">
            <div class="col text-center" >
                <button type="button" class="btn justify-content-center button" data-bs-toggle="modal" data-bs-target="#register">
                    Register
                  </button>
                
    
            </div>
        </div>
      </div>
      
      <br>
    
      
      <!-- Modal -->
      <div class="modal fade" id="register" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              
              <h5 class="modal-title text-center" id="register">Register</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/submitRegister" method="post">
                <div class="form-outline mb-4">
                    <input type="text" name="fnam" class="form-control" />
                    <label class="form-label" for="registerName">Firts Name</label>
                  </div>
            
                  <!-- Username input -->
                  <div class="form-outline mb-4">
                    <input type="text" name="lnam" class="form-control" />
                    <label class="form-label" for="registerUsername">Last Name</label>
                  </div>
            
                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <input type="email" name="mail" class="form-control" />
                    <label class="form-label" for="registerEmail">Email</label>
                  </div>
            
                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <input type="password" name="password" class="form-control" />
                    <label class="form-label" for="registerPassword">Password</label>
                  </div>
            
                  
            
              
            
                  <!-- Submit button -->
                  <button type="submit" class="btn btn-info btn-block mb-3">Sign in</button>
                

                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    
                  </div>
                </form>
              </div>
            </div>
            </div>
           
          </div>
        </div>
      </div>
    
      <div class="container">
        <div class="row ">
            <div class="col text-center ">
                <button type="button" class="btn  justify-content-center button" data-bs-toggle="modal" data-bs-target="#login">
                    Login
                  </button>
    
            </div>
        </div>
      </div>
        
         
    
    
      
    
    
      
      <!-- Modal -->
      <div class="modal fade" id="login" tabindex="-1" aria-labelledby="login" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title  text-center" id="login">Login</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/submitLogin" method="get">
            <div class="modal-body">
                <div class="form-outline mb-4">
                    <input type="email" name="mail" class="form-control" />
                    <label class="form-label" for="loginName">Email</label>
                  </div>
            
                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <input type="password" name="password" class="form-control" />
                    <label class="form-label" for="loginPassword">Password</label>
                  </div>
            
                 
            
                    
                  </div>
            
                  <!-- Submit button -->
                  <button type="submit" class="btn btn-info btn-block mb-4">Sign in</button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              
            </div>
          </div>
        </div>
      </div>
    </div>
     
            
  
