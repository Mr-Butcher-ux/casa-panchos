<%- include('layouts/header.ejs') %>
      
      <!---->
      <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-5 text-center contactform p-5">
                <form action="/submitRecipe" method="post">
                    <h3 class="mb-4">Thanks for sharing your recipe with us, please fill this form and  writte your recipe
                        or upload a document.

                    </h3>
                    <input type="text" class="form-control mb-4" name="rname" aria-describedby="recipename" placeholder="Recipe Name">
                    <input type="text" class="form-control mb-4" name="time" aria-describedby="time" placeholder="Time of prepration">
                    
                    <input type="text" class="form-control mb-4" name="difficulty" aria-describedby="difficulty" placeholder="Difficulty">
                    
                    <select class="form-select mb-4" aria-label="Default select example" name="kind">
                        <option selected value="Soup">Soup</option>
                        <option value="Meat">Meat</option>
                        <option value="Drink">Drink</option>
                        <option value="Salsa">Salsa</option>
                        <option value="Other">Other</option>
                    </select>
                    <textarea class="form-control mb-4" name="comment" rows="10" placeholder="Something about the recipe."></textarea>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Upload your file</label>
                        <input class="form-control" type="file" name="file">
                      </div>
                    <div class="d-grid">
                        <button type="submit" class="btn button">Submit</button>
                    </div>
                </form>
            </div>
        <div>
     </div>
   
      

